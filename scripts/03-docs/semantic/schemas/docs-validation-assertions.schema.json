{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://mplp.io/schemas/governance/docs-validation-assertions.schema.json",
    "title": "MPLP Docs Validation Assertions",
    "type": "object",
    "required": [
        "schema_version",
        "protocol_version",
        "assertions"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "protocol_version": {
            "type": "string",
            "const": "1.0.0"
        },
        "assertions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/assertion"
            }
        }
    },
    "$defs": {
        "assertion": {
            "type": "object",
            "required": [
                "id",
                "severity",
                "selector",
                "require"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^DOCS-AST-[0-9]{3}$"
                },
                "severity": {
                    "type": "string",
                    "enum": [
                        "HARD",
                        "WARN"
                    ]
                },
                "selector": {
                    "$ref": "#/$defs/selector"
                },
                "require": {
                    "$ref": "#/$defs/requirement"
                },
                "message": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "selector": {
            "type": "object",
            "required": [
                "match"
            ],
            "properties": {
                "match": {
                    "type": "object",
                    "properties": {
                        "path_glob": {
                            "type": "string"
                        },
                        "doc_type": {
                            "type": "string",
                            "enum": [
                                "normative",
                                "informative",
                                "governance",
                                "reference",
                                "internal_ops"
                            ]
                        },
                        "tags_any": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "additionalProperties": false
                },
                "exclude": {
                    "type": "object",
                    "properties": {
                        "path_glob": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "requirement": {
            "type": "object",
            "properties": {
                "frontmatter": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "header_block": {
                    "type": "object",
                    "properties": {
                        "must_contain_keys": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "forbid_patterns": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "additionalProperties": false
                },
                "headings": {
                    "type": "object",
                    "properties": {
                        "must_have": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "must_not_have": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}