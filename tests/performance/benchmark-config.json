{
  "benchmarkConfig": {
    "name": "MPLP Production Performance Benchmark Suite",
    "version": "1.0.0",
    "description": "生产级性能基准测试配置",
    "environment": "production",
    "testProfiles": {
      "quick": {
        "description": "快速性能测试（开发环境）",
        "duration": 30000,
        "warmupTime": 5000,
        "cooldownTime": 2000,
        "sampleSize": 100,
        "concurrencyLevels": [1, 5, 10],
        "memoryTestOperations": 500
      },
      "standard": {
        "description": "标准性能测试（测试环境）",
        "duration": 300000,
        "warmupTime": 30000,
        "cooldownTime": 10000,
        "sampleSize": 1000,
        "concurrencyLevels": [1, 10, 50, 100],
        "memoryTestOperations": 1000
      },
      "production": {
        "description": "生产级性能测试（生产环境）",
        "duration": 1800000,
        "warmupTime": 60000,
        "cooldownTime": 30000,
        "sampleSize": 10000,
        "concurrencyLevels": [1, 25, 50, 100, 200],
        "memoryTestOperations": 5000
      }
    },
    "performanceTargets": {
      "responseTime": {
        "excellent": 50,
        "good": 100,
        "acceptable": 200,
        "poor": 500
      },
      "throughput": {
        "excellent": 2000,
        "good": 1000,
        "acceptable": 500,
        "poor": 100
      },
      "errorRate": {
        "excellent": 0.01,
        "good": 0.1,
        "acceptable": 0.5,
        "poor": 1.0
      },
      "memoryUsage": {
        "excellent": 128,
        "good": 256,
        "acceptable": 512,
        "poor": 1024
      }
    },
    "moduleSpecificTargets": {
      "context": {
        "priority": "high",
        "responseTimeMultiplier": 0.5,
        "throughputMultiplier": 2.0,
        "memoryMultiplier": 0.5,
        "reliabilityMultiplier": 0.1
      },
      "plan": {
        "priority": "high",
        "responseTimeMultiplier": 1.0,
        "throughputMultiplier": 1.0,
        "memoryMultiplier": 1.0,
        "reliabilityMultiplier": 0.2
      },
      "role": {
        "priority": "critical",
        "responseTimeMultiplier": 0.4,
        "throughputMultiplier": 3.0,
        "memoryMultiplier": 0.25,
        "reliabilityMultiplier": 0.05
      },
      "confirm": {
        "priority": "high",
        "responseTimeMultiplier": 0.6,
        "throughputMultiplier": 1.5,
        "memoryMultiplier": 0.5,
        "reliabilityMultiplier": 0.1
      },
      "trace": {
        "priority": "critical",
        "responseTimeMultiplier": 0.3,
        "throughputMultiplier": 5.0,
        "memoryMultiplier": 0.25,
        "reliabilityMultiplier": 0.05
      },
      "extension": {
        "priority": "medium",
        "responseTimeMultiplier": 0.8,
        "throughputMultiplier": 0.8,
        "memoryMultiplier": 1.0,
        "reliabilityMultiplier": 0.3
      },
      "dialog": {
        "priority": "medium",
        "responseTimeMultiplier": 2.0,
        "throughputMultiplier": 0.5,
        "memoryMultiplier": 2.0,
        "reliabilityMultiplier": 0.5
      },
      "collab": {
        "priority": "medium",
        "responseTimeMultiplier": 1.6,
        "throughputMultiplier": 0.6,
        "memoryMultiplier": 1.5,
        "reliabilityMultiplier": 0.4
      },
      "core": {
        "priority": "critical",
        "responseTimeMultiplier": 0.2,
        "throughputMultiplier": 10.0,
        "memoryMultiplier": 0.5,
        "reliabilityMultiplier": 0.01
      },
      "network": {
        "priority": "high",
        "responseTimeMultiplier": 1.0,
        "throughputMultiplier": 2.0,
        "memoryMultiplier": 1.0,
        "reliabilityMultiplier": 0.2
      }
    },
    "testScenarios": {
      "singleUser": {
        "description": "单用户场景测试",
        "concurrency": 1,
        "duration": 60000,
        "operations": ["create", "read", "update", "delete"]
      },
      "normalLoad": {
        "description": "正常负载场景测试",
        "concurrency": 50,
        "duration": 300000,
        "operations": ["create", "read", "update", "delete", "batch"]
      },
      "peakLoad": {
        "description": "峰值负载场景测试",
        "concurrency": 100,
        "duration": 600000,
        "operations": ["create", "read", "update", "delete", "batch", "concurrent"]
      },
      "stressTest": {
        "description": "压力测试场景",
        "concurrency": 200,
        "duration": 1800000,
        "operations": ["create", "read", "update", "delete", "batch", "concurrent", "bulk"]
      }
    },
    "reporting": {
      "formats": ["console", "json", "html", "csv"],
      "outputDirectory": "./reports",
      "includeCharts": true,
      "includeRecommendations": true,
      "detailLevel": "full"
    },
    "monitoring": {
      "enableResourceMonitoring": true,
      "enableNetworkMonitoring": true,
      "enableDatabaseMonitoring": false,
      "enableCacheMonitoring": true,
      "samplingInterval": 1000,
      "alertThresholds": {
        "cpuUsage": 80,
        "memoryUsage": 85,
        "diskUsage": 90,
        "networkLatency": 100
      }
    },
    "validation": {
      "enableDataValidation": true,
      "enableSchemaValidation": true,
      "enableBusinessRuleValidation": true,
      "enableSecurityValidation": true
    }
  }
}
