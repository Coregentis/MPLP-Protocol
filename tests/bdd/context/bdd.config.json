{
  "module": "context",
  "testEnvironment": "node",
  "schemaValidation": {
    "enabled": true,
    "schemaPath": "src/schemas/mplp-context.json",
    "validator": "ajv",
    "strictMode": true
  },
  "reporting": {
    "enabled": true,
    "outputDir": "tests/bdd/context/reports",
    "formats": [
      "json",
      "html",
      "console"
    ]
  },
  "performance": {
    "enabled": true,
    "thresholds": {
      "responseTime": 100,
      "throughput": 1000,
      "errorRate": 0.01
    }
  },
  "coverage": {
    "enabled": true,
    "thresholds": {
      "functional": 90,
      "api": 100,
      "error": 95,
      "performance": 85
    }
  }
}