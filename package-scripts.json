{
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration", 
    "test:e2e": "jest tests/e2e",
    "test:performance": "jest tests/performance/real-business-performance.test.ts",
    "test:performance:regression": "jest tests/performance --testNamePattern=\"regression\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:compatibility": "jest --testPathPattern=\"compatibility\"",
    
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:licenses": "license-checker --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;0BSD'",
    
    "docs:build": "typedoc src/index.ts --out docs/api",
    "docs:check-links": "markdown-link-check docs/**/*.md",
    "docs:spell-check": "cspell 'docs/**/*.md' 'README.md'",
    
    "release:patch": "npm version patch && npm run release:publish",
    "release:minor": "npm version minor && npm run release:publish", 
    "release:major": "npm version major && npm run release:publish",
    "release:prerelease": "npm version prerelease --preid=beta && npm run release:publish",
    "release:publish": "npm run build && npm test && npm publish",
    "release:dry-run": "npm run build && npm test && npm pack",
    
    "clean": "rimraf dist coverage *.tgz",
    "prebuild": "npm run clean",
    "pretest": "npm run build",
    "prepublishOnly": "npm run test && npm run security:audit"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cspell": "^7.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "license-checker": "^25.0.1",
    "markdown-link-check": "^3.11.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  }
}
