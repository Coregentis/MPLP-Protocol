{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "rules": {
    // Relaxed rules for example code
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": [
      "off"
    ],
    "no-unused-vars": "off",
    "no-console": "off",
    "no-debugger": "warn",
    "eqeqeq": ["warn", "always"],
    "prefer-const": "warn",
    "no-var": "warn",
    "no-case-declarations": "off",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "dist/",
    "coverage/",
    "node_modules/",
    "*.js",
    "*.d.ts"
  ]
}
