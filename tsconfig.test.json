{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "checkJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitThis": false,
    "noImplicitReturns": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "**/__tests__/**/*.ts",
    "**/__mocks__/**/*.ts",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "src/modules/role/__tests__/**/*.ts", 
    "src/modules/trace/__tests__/**/*.ts"
  ]
} 