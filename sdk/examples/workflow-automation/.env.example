# MPLP Workflow Automation Example Environment Configuration

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Workflow Configuration
WORKFLOW_TIMEOUT=30000
MAX_CONCURRENT_WORKFLOWS=10
RETRY_ATTEMPTS=3

# Agent Configuration
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.8
RESPONSE_GENERATION_TIMEOUT=5000
ESCALATION_THRESHOLD=0.7

# Knowledge Base Configuration
KNOWLEDGE_BASE_URL=http://localhost:8080/api/kb
KNOWLEDGE_BASE_API_KEY=your_kb_api_key_here

# Notification Configuration
EMAIL_SERVICE_URL=http://localhost:8081/api/email
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000

# Database Configuration (if needed)
DATABASE_URL=sqlite://./data/workflow.db

# External Services (optional)
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
