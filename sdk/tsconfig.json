{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/sdk.tsbuildinfo",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@mplp/sdk-core": ["./packages/core/src"],
      "@mplp/agent-builder": ["./packages/agent-builder/src"],
      "@mplp/orchestrator": ["./packages/orchestrator/src"],
      "@mplp/cli": ["./packages/cli/src"],
      "@mplp/studio": ["./packages/studio/src"],
      "@mplp/dev-tools": ["./packages/dev-tools/src"],
      "@mplp/adapter-*": ["./adapters/*/src"],
      "@mplp/testing": ["./tools/testing/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "adapters/*/src/**/*",
    "examples/*/src/**/*",
    "tools/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/node_modules"
  ],
  "references": [
    { "path": "./packages/core" }
  ]
}
