{
  "version": "1.1.0-beta",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "*.md",
        "*.test.ts",
        "*.spec.ts"
      ]
    },

    "version": {
      "allowBranch": ["main", "develop"],
      "conventionalCommits": true
    }
  },
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "npmClientArgs": ["--no-package-lock"]
}
