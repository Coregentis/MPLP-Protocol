{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mplp.dev/schemas/v1.0/mplp-transaction.json",
  "title": "MPLP Cross-Module Transaction Protocol v1.0",
  "description": "多智能体协议生命周期平台跨模块事务管理协议Schema",
  "version": "1.0.0",
  "type": "object",
  "$defs": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "UUID v4 format"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "module_type": {
      "type": "string",
      "enum": ["core", "context", "plan", "confirm", "trace", "role", "extension", "collab", "dialog", "network"],
      "description": "MPLP模块类型"
    },
    "isolation_level": {
      "type": "string",
      "enum": ["read_uncommitted", "read_committed", "repeatable_read", "serializable"],
      "default": "read_committed",
      "description": "事务隔离级别"
    },
    "transaction_state": {
      "type": "string",
      "enum": ["active", "preparing", "prepared", "committing", "committed", "aborting", "aborted", "unknown"],
      "description": "事务状态"
    },
    "rollback_strategy": {
      "type": "string",
      "enum": ["compensate", "rollback", "manual", "ignore"],
      "default": "compensate",
      "description": "回滚策略"
    },
    "participant_info": {
      "type": "object",
      "properties": {
        "module": {"$ref": "#/$defs/module_type"},
        "participant_id": {"$ref": "#/$defs/uuid"},
        "resource_locks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "resource_id": {"type": "string"},
              "lock_type": {
                "type": "string",
                "enum": ["read", "write", "exclusive"]
              },
              "acquired_at": {"$ref": "#/$defs/timestamp"}
            },
            "required": ["resource_id", "lock_type", "acquired_at"]
          }
        },
        "state": {"$ref": "#/$defs/transaction_state"},
        "last_heartbeat": {"$ref": "#/$defs/timestamp"},
        "compensation_data": {
          "type": "object",
          "description": "补偿操作所需数据"
        }
      },
      "required": ["module", "participant_id", "state", "last_heartbeat"]
    },
    "transaction_context": {
      "type": "object",
      "properties": {
        "transaction_id": {"$ref": "#/$defs/uuid"},
        "parent_transaction_id": {
          "$ref": "#/$defs/uuid",
          "description": "父事务ID，用于嵌套事务"
        },
        "isolation_level": {"$ref": "#/$defs/isolation_level"},
        "participating_modules": {
          "type": "array",
          "items": {"$ref": "#/$defs/module_type"},
          "minItems": 1,
          "description": "参与事务的模块列表"
        },
        "participants": {
          "type": "array",
          "items": {"$ref": "#/$defs/participant_info"},
          "description": "事务参与者详细信息"
        },
        "transaction_state": {"$ref": "#/$defs/transaction_state"},
        "timeout_ms": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 3600000,
          "default": 30000,
          "description": "事务超时时间(毫秒)"
        },
        "rollback_strategy": {"$ref": "#/$defs/rollback_strategy"},
        "coordinator_module": {
          "$ref": "#/$defs/module_type",
          "description": "事务协调器模块"
        },
        "metadata": {
          "type": "object",
          "description": "事务元数据"
        },
        "created_at": {"$ref": "#/$defs/timestamp"},
        "updated_at": {"$ref": "#/$defs/timestamp"}
      },
      "required": ["transaction_id", "participating_modules", "transaction_state", "coordinator_module", "created_at"]
    },
    "transaction_operation": {
      "type": "object",
      "properties": {
        "operation_id": {"$ref": "#/$defs/uuid"},
        "transaction_id": {"$ref": "#/$defs/uuid"},
        "operation_type": {
          "type": "string",
          "enum": ["begin", "prepare", "commit", "abort", "rollback", "compensate", "heartbeat"],
          "description": "事务操作类型"
        },
        "source_module": {"$ref": "#/$defs/module_type"},
        "target_module": {"$ref": "#/$defs/module_type"},
        "operation_data": {
          "type": "object",
          "description": "操作相关数据"
        },
        "timeout_ms": {
          "type": "integer",
          "minimum": 100,
          "default": 5000,
          "description": "操作超时时间(毫秒)"
        },
        "created_at": {"$ref": "#/$defs/timestamp"}
      },
      "required": ["operation_id", "transaction_id", "operation_type", "source_module", "target_module", "created_at"]
    },
    "transaction_result": {
      "type": "object",
      "properties": {
        "operation_id": {"$ref": "#/$defs/uuid"},
        "transaction_id": {"$ref": "#/$defs/uuid"},
        "result_status": {
          "type": "string",
          "enum": ["success", "failure", "timeout", "conflict"],
          "description": "操作结果状态"
        },
        "result_data": {
          "type": "object",
          "description": "操作结果数据"
        },
        "error_info": {
          "type": "object",
          "properties": {
            "error_code": {
              "type": "string",
              "pattern": "^[A-Z]{4}[0-9]{4}$"
            },
            "error_message": {"type": "string"},
            "error_details": {"type": "object"}
          }
        },
        "execution_time_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "执行时间(毫秒)"
        },
        "resource_usage": {
          "type": "object",
          "properties": {
            "memory_mb": {"type": "number"},
            "cpu_time_ms": {"type": "integer"},
            "io_operations": {"type": "integer"}
          }
        },
        "completed_at": {"$ref": "#/$defs/timestamp"}
      },
      "required": ["operation_id", "transaction_id", "result_status", "completed_at"]
    },
    "compensation_action": {
      "type": "object",
      "properties": {
        "action_id": {"$ref": "#/$defs/uuid"},
        "transaction_id": {"$ref": "#/$defs/uuid"},
        "target_module": {"$ref": "#/$defs/module_type"},
        "compensation_operation": {
          "type": "string",
          "description": "补偿操作名称"
        },
        "compensation_data": {
          "type": "object",
          "description": "补偿操作数据"
        },
        "execution_order": {
          "type": "integer",
          "minimum": 1,
          "description": "补偿操作执行顺序"
        },
        "timeout_ms": {
          "type": "integer",
          "minimum": 1000,
          "default": 10000
        },
        "created_at": {"$ref": "#/$defs/timestamp"}
      },
      "required": ["action_id", "transaction_id", "target_module", "compensation_operation", "compensation_data", "execution_order", "created_at"]
    }
  },
  "properties": {
    "protocol_version": {
      "type": "string",
      "const": "1.0.0",
      "description": "MPLP协议版本"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601格式时间戳"
    },
    "transaction_context": {"$ref": "#/$defs/transaction_context"},
    "transaction_operation": {"$ref": "#/$defs/transaction_operation"},
    "transaction_result": {"$ref": "#/$defs/transaction_result"},
    "compensation_action": {"$ref": "#/$defs/compensation_action"},
    "audit_trail": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "retention_days": { "type": "integer", "minimum": 1, "maximum": 2555 },
        "audit_events": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "event_id": { "$ref": "#/$defs/uuid" },
              "event_type": {
                "type": "string",
                "enum": ["transaction_started", "transaction_committed", "transaction_aborted", "lock_acquired", "lock_released", "deadlock_detected", "compensation_executed", "rollback_completed"]
              },
              "timestamp": { "$ref": "#/$defs/timestamp" },
              "user_id": { "type": "string" },
              "user_role": { "type": "string" },
              "action": { "type": "string" },
              "resource": { "type": "string" },
              "transaction_operation": { "type": "string" },
              "transaction_id": { "$ref": "#/$defs/uuid" },
              "participant_modules": {
                "type": "array",
                "items": { "$ref": "#/$defs/module_type" }
              },
              "isolation_level": { "$ref": "#/$defs/isolation_level" },
              "transaction_details": { "type": "object" },
              "ip_address": { "type": "string" },
              "user_agent": { "type": "string" },
              "session_id": { "type": "string" },
              "correlation_id": { "$ref": "#/$defs/uuid" }
            },
            "required": ["event_id", "event_type", "timestamp", "user_id", "action", "resource"]
          }
        },
        "compliance_settings": {
          "type": "object",
          "properties": {
            "gdpr_enabled": { "type": "boolean" },
            "hipaa_enabled": { "type": "boolean" },
            "sox_enabled": { "type": "boolean" },
            "transaction_audit_level": {
              "type": "string",
              "enum": ["basic", "detailed", "comprehensive"]
            },
            "transaction_data_logging": { "type": "boolean" },
            "custom_compliance": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      },
      "required": ["enabled", "retention_days"]
    },
    "monitoring_integration": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "supported_providers": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["prometheus", "grafana", "datadog", "new_relic", "elastic_apm", "custom"]
          }
        },
        "integration_endpoints": {
          "type": "object",
          "properties": {
            "metrics_api": { "type": "string", "format": "uri" },
            "transaction_performance_api": { "type": "string", "format": "uri" },
            "deadlock_detection_api": { "type": "string", "format": "uri" },
            "acid_compliance_api": { "type": "string", "format": "uri" }
          }
        },
        "transaction_metrics": {
          "type": "object",
          "properties": {
            "track_transaction_performance": { "type": "boolean" },
            "track_deadlock_detection": { "type": "boolean" },
            "track_acid_compliance": { "type": "boolean" },
            "track_lock_contention": { "type": "boolean" }
          }
        },
        "export_formats": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["prometheus", "opentelemetry", "custom"]
          }
        }
      },
      "required": ["enabled", "supported_providers"]
    },
    "performance_metrics": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "collection_interval_seconds": { "type": "integer", "minimum": 10, "maximum": 3600 },
        "metrics": {
          "type": "object",
          "properties": {
            "transaction_latency_ms": { "type": "number", "minimum": 0 },
            "transaction_throughput_per_second": { "type": "number", "minimum": 0 },
            "deadlock_frequency_percent": { "type": "number", "minimum": 0, "maximum": 100 },
            "acid_compliance_score": { "type": "number", "minimum": 0, "maximum": 10 },
            "lock_contention_rate_percent": { "type": "number", "minimum": 0, "maximum": 100 },
            "active_transactions_count": { "type": "integer", "minimum": 0 },
            "failed_transactions_count": { "type": "integer", "minimum": 0 },
            "rollback_frequency_percent": { "type": "number", "minimum": 0, "maximum": 100 },
            "average_lock_wait_time_ms": { "type": "number", "minimum": 0 }
          }
        },
        "health_status": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["healthy", "degraded", "unhealthy", "deadlocked"]
            },
            "last_check": { "$ref": "#/$defs/timestamp" },
            "checks": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "check_name": { "type": "string" },
                  "status": {
                    "type": "string",
                    "enum": ["pass", "fail", "warn"]
                  },
                  "message": { "type": "string" },
                  "duration_ms": { "type": "number", "minimum": 0 }
                },
                "required": ["check_name", "status"]
              }
            }
          }
        },
        "alerting": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "thresholds": {
              "type": "object",
              "properties": {
                "max_transaction_latency_ms": { "type": "number", "minimum": 0 },
                "min_transaction_throughput_per_second": { "type": "number", "minimum": 0 },
                "max_deadlock_frequency_percent": { "type": "number", "minimum": 0, "maximum": 100 },
                "min_acid_compliance_score": { "type": "number", "minimum": 0, "maximum": 10 },
                "max_lock_contention_rate_percent": { "type": "number", "minimum": 0, "maximum": 100 }
              }
            },
            "notification_channels": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["email", "slack", "webhook", "sms", "pagerduty"]
              }
            }
          }
        }
      },
      "required": ["enabled", "collection_interval_seconds"]
    },
    "version_history": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "max_versions": { "type": "integer", "minimum": 1, "maximum": 100, "default": 50 },
        "versions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "version_id": { "$ref": "#/$defs/uuid" },
              "version_number": { "type": "integer", "minimum": 1 },
              "created_at": { "$ref": "#/$defs/timestamp" },
              "created_by": { "type": "string" },
              "change_summary": { "type": "string" },
              "transaction_snapshot": { "type": "object" },
              "change_type": {
                "type": "string",
                "enum": ["transaction_created", "configuration_updated", "isolation_level_changed", "timeout_modified", "participants_updated"]
              }
            },
            "required": ["version_id", "version_number", "created_at", "created_by", "change_type"]
          }
        },
        "auto_versioning": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "version_on_config_change": { "type": "boolean" },
            "version_on_isolation_change": { "type": "boolean" },
            "version_on_participant_change": { "type": "boolean" }
          }
        }
      },
      "required": ["enabled", "max_versions"]
    },
    "search_metadata": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "indexing_strategy": {
          "type": "string",
          "enum": ["full_text", "keyword", "semantic", "hybrid"]
        },
        "searchable_fields": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["transaction_id", "participant_modules", "isolation_level", "transaction_state", "transaction_data", "performance_metrics", "metadata", "audit_logs"]
          }
        },
        "search_indexes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "index_id": { "type": "string" },
              "index_name": { "type": "string" },
              "fields": { "type": "array", "items": { "type": "string" } },
              "index_type": {
                "type": "string",
                "enum": ["btree", "hash", "gin", "gist", "full_text"]
              },
              "created_at": { "$ref": "#/$defs/timestamp" },
              "last_updated": { "$ref": "#/$defs/timestamp" }
            },
            "required": ["index_id", "index_name", "fields", "index_type"]
          }
        },
        "transaction_indexing": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "index_transaction_data": { "type": "boolean" },
            "index_performance_metrics": { "type": "boolean" },
            "index_audit_logs": { "type": "boolean" }
          }
        },
        "auto_indexing": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "index_new_transactions": { "type": "boolean" },
            "reindex_interval_hours": { "type": "integer", "minimum": 1 }
          }
        }
      },
      "required": ["enabled", "indexing_strategy"]
    },

    "transaction_details": {

      "type": "object",

      "properties": {

        "isolation_level": {

          "type": "string",

          "enum": [

            "read_uncommitted",

            "read_committed",

            "repeatable_read",

            "serializable"

          ]

        },

        "timeout_seconds": {

          "type": "integer",

          "minimum": 1,

          "maximum": 3600

        },

        "rollback_strategy": {

          "type": "string",

          "enum": [

            "automatic",

            "manual",

            "conditional"

          ]

        }

      },

      "description": "事务详细配置"

    },
    "event_integration": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "event_bus_connection": {
          "type": "object",
          "properties": {
            "bus_type": {
              "type": "string",
              "enum": ["kafka", "rabbitmq", "redis", "nats", "custom"]
            },
            "connection_string": { "type": "string" },
            "topic_prefix": { "type": "string" },
            "consumer_group": { "type": "string" }
          }
        },
        "published_events": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["transaction_started", "transaction_committed", "transaction_aborted", "transaction_deadlock_detected", "transaction_lock_acquired", "transaction_compensation_executed", "transaction_rollback_completed"]
          }
        },
        "subscribed_events": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["context_updated", "plan_executed", "confirm_approved", "trace_completed", "role_assigned", "extension_activated", "dialog_started", "network_connected", "collab_coordinated", "orchestration_executed", "coordination_synchronized", "eventbus_message_published", "statesync_sync_completed"]
          }
        },
        "event_routing": {
          "type": "object",
          "properties": {
            "routing_rules": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "rule_id": { "type": "string" },
                  "condition": { "type": "string" },
                  "target_topic": { "type": "string" },
                  "enabled": { "type": "boolean" }
                },
                "required": ["rule_id", "condition", "target_topic"]
              }
            }
          }
        }
      },
      "required": ["enabled"]
    }
  },
  "oneOf": [
    {"required": ["protocol_version", "timestamp", "transaction_context", "audit_trail", "monitoring_integration", "performance_metrics", "version_history", "search_metadata", "transaction_details", "event_integration"]},
    {"required": ["protocol_version", "timestamp", "transaction_operation", "audit_trail", "monitoring_integration", "performance_metrics", "version_history", "search_metadata", "transaction_details", "event_integration"]},
    {"required": ["protocol_version", "timestamp", "transaction_result", "audit_trail", "monitoring_integration", "performance_metrics", "version_history", "search_metadata", "transaction_details", "event_integration"]},
    {"required": ["protocol_version", "timestamp", "compensation_action", "audit_trail", "monitoring_integration", "performance_metrics", "version_history", "search_metadata", "transaction_details", "event_integration"]}
  ]
}
