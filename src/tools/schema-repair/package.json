{
  "name": "@mplp/schema-repair-tools",
  "version": "1.0.0",
  "description": "MPLP Schema质量修复工具集 - 基于MPLP v1.0成功实践",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "fix:naming": "node fix-naming-conventions.js",
    "fix:headers": "node fix-schema-headers.js",
    "fix:enterprise": "node fix-all-enterprise-issues.js",
    "fix:specialization": "node add-all-specialization-fields.js",
    "fix:all": "node index.js --fix-all",
    "validate": "cd ../../../ && npm run validate:schemas",
    "test": "node test/run-tests.js",
    "lint": "eslint *.js",
    "docs": "node generate-docs.js"
  },
  "keywords": [
    "mplp",
    "schema",
    "repair",
    "validation",
    "quality-assurance",
    "enterprise",
    "json-schema"
  ],
  "author": "MPLP Project Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "eslint": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mplp/mplp-v1.0.git",
    "directory": "src/tools/schema-repair"
  },
  "bugs": {
    "url": "https://github.com/mplp/mplp-v1.0/issues"
  },
  "homepage": "https://github.com/mplp/mplp-v1.0/tree/main/src/tools/schema-repair#readme",
  "files": [
    "*.js",
    "README.md",
    "package.json"
  ],
  "config": {
    "schemasPath": "../../../src/schemas",
    "backupPath": "./backups",
    "logLevel": "info"
  },
  "mplp": {
    "toolType": "schema-repair",
    "version": "1.0.0",
    "compatibility": {
      "mplp": ">=1.0.0",
      "schemas": ">=1.0.0"
    },
    "features": [
      "naming-convention-repair",
      "schema-header-repair", 
      "enterprise-feature-repair",
      "specialization-field-addition",
      "batch-processing",
      "validation-integration"
    ],
    "validation": {
      "successCriteria": {
        "errors": 0,
        "warnings": 0,
        "enterpriseCompliance": 100.0,
        "namingCompliance": 100.0
      },
      "verifiedOn": {
        "project": "MPLP v1.0",
        "schemas": 19,
        "date": "2025-08-14",
        "results": {
          "beforeRepair": {
            "errors": 64,
            "warnings": 35,
            "enterpriseCompliance": 0.0,
            "namingCompliance": 68.4
          },
          "afterRepair": {
            "errors": 0,
            "warnings": 0,
            "enterpriseCompliance": 100.0,
            "namingCompliance": 100.0
          },
          "repairTime": "31 minutes"
        }
      }
    }
  }
}
