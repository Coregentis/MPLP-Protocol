{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "rules": {
    // Basic rules - Temporarily relaxed for gradual improvement
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-vars": [
      "warn",  // Changed from error to warn
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "no-unused-vars": "off",
    "no-console": "off",
    "no-debugger": "error",
    "eqeqeq": ["error", "always"],
    "prefer-const": "error",
    "no-var": "error",
    // Additional rules to handle common issues
    "no-case-declarations": "warn",  // Handle case block declarations
    "no-undef": "off"  // Handle undefined variables like NodeJS
  },
  "ignorePatterns": [
    "dist/",
    "coverage/",
    "node_modules/",
    "*.js",
    "*.d.ts"
  ]
} 