# MPLP v1.0 Alpha 测试环境 Dockerfile
# 用于CI/CD流水线中的自动化测试

FROM node:18-alpine AS base

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apk add --no-cache \
    curl \
    git \
    python3 \
    make \
    g++ \
    && rm -rf /var/cache/apk/*

# 复制package文件
COPY package*.json ./

# 安装依赖
RUN npm ci --legacy-peer-deps --only=production && \
    npm cache clean --force

# 开发依赖阶段
FROM base AS dev-deps
RUN npm ci --legacy-peer-deps

# 构建阶段
FROM dev-deps AS build

# 复制源代码
COPY . .

# 构建项目
RUN npm run build

# 测试阶段
FROM dev-deps AS test

# 复制源代码和构建产物
COPY . .
COPY --from=build /app/dist ./dist

# 设置测试环境变量
ENV NODE_ENV=test
ENV PORT=3000
ENV LOG_LEVEL=info

# 创建必要的目录
RUN mkdir -p logs test-data test-results

# 健康检查脚本
COPY scripts/docker/health-check.sh /usr/local/bin/health-check.sh
RUN chmod +x /usr/local/bin/health-check.sh

# 暴露端口
EXPOSE 3000

# 健康检查
HEALTHCHECK --interval=10s --timeout=5s --start-period=30s --retries=3 \
    CMD /usr/local/bin/health-check.sh

# 启动命令
CMD ["npm", "run", "start:test"]
