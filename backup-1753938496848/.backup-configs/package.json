{
  "name": "mplp-v1.0",
  "version": "1.0.0",
  "description": "Multi-Agent Project Lifecycle Protocol (MPLP) v1.0 - A vendor-neutral protocol for AI-driven software development lifecycle with TracePilot integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json --watch",
    "build:development": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit --project tsconfig.json",
    "prepare": "husky install",
    "validate": "npm run typecheck:tests && npm run lint && npm run test",
    "clean": "rimraf dist coverage",
    "docs:generate": "typedoc src --out docs/api",
    "schema:validate": "ajv compile --all-errors -s src/schemas/*.json",
    "docker:build": "docker build -t mplp:latest .",
    "docker:run": "docker run -p 3000:3000 mplp:latest",
    "reinit": "node scripts/reinit-project.js",
    "setup:dev": "npm run reinit && npm run dev",
    "tracepilot:test": "node scripts/test-tracepilot-connection.js",
    "governance:validate": "node scripts/validate-governance.js",
    "modules:status": "node scripts/check-modules-status.js"
  },
  "keywords": [
    "mplp",
    "multi-agent",
    "protocol",
    "ai",
    "software-development",
    "lifecycle",
    "tracepilot",
    "mcp",
    "coregentis",
    "governance",
    "trace-driven"
  ],
  "author": "Coregentis MPLP Team <mplp-support@coregentis.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Coregentis/MPLP-Protocol-Dev"
  },
  "bugs": {
    "url": "https://github.com/Coregentis/MPLP-Protocol/issues"
  },
  "homepage": "https://github.com/Coregentis/MPLP-Protocol#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "prom-client": "^15.0.0",
    "graphql": "^16.8.1",
    "apollo-server-express": "^3.12.1",
    "socket.io": "^4.7.4",
    "dotenv": "^16.3.1",
    "reflect-metadata": "^0.1.13",
    "axios": "^1.6.0",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/ws": "^8.5.8",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.4",
    "ajv-cli": "^5.0.0",
    "cross-env": "^7.0.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@tests/(.*)$": "<rootDir>/tests/$1"
    }
  },
  "mplp": {
    "version": "1.0.0",
    "governance_version": "2.2",
    "tracepilot_integration": true,
    "core_modules": [
      "context",
      "plan", 
      "confirm",
      "trace",
      "role",
      "extension"
    ],
    "performance_targets": {
      "api_response_p95_ms": 100,
      "tracepilot_sync_ms": 100,
      "protocol_parsing_ms": 10
    },
    "quality_standards": {
      "unit_test_coverage": 90,
      "integration_test_coverage": 80,
      "e2e_test_coverage": 60
    }
  }
} 